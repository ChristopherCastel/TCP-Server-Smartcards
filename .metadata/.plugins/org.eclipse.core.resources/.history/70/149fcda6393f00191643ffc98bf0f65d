#ifndef SRC_LOGGER_LOGGER_INFO_H_
#define SRC_LOGGER_LOGGER_INFO_H_

#include "logger.h"
#include "plog/include/plog/Log.h"

namespace logger {

class LoggerInfo : public Logger {
public:
	LoggerInfo() { this->next = nullptr; }
	LoggerInfo(Logger* next) { this->next = next; }
	virtual ~LoggerInfo() {}
	void log(std::string message);
};

} /* namespace logger */

#endif /* SRC_LOGGER_LOGGER_INFO_H_ */
