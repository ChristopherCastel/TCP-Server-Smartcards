#ifndef SRC_LOGGER_LOGGER_WRAPPER_H_
#define SRC_LOGGER_LOGGER_WRAPPER_H_

#include <string>
#include "logger.h"
#include "logger_debug.h"
#include "logger_info.h"

namespace logger {

static Logger chain = new LoggerDebug(new LoggerInfo(nullptr));

inline void init(std::string log_path, std::string log_level) {
	chain.init(log_path, log_level);
}

inline void log(std::string message) {
	chain.log(message);
}

} /* namespace logger */

#endif /* SRC_LOGGER_LOGGER_WRAPPER_H_ */
