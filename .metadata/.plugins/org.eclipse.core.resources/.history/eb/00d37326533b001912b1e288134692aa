#ifndef TERMINAL_TERMINALS_PCSC_H_
#define TERMINAL_TERMINALS_PCSC_H_

#include "terminal_layer.h"
#include "../../response_packet.h"

namespace client {

class PCSC : public ITerminalLayer {
public:
	PCSC() {};

	~PCSC() {};

	responses::ResponsePacket init();

	responses::ResponsePacket sendCommand(std::string command);

	responses::ResponsePacket diag();

	responses::ResponsePacket disconnect();
};

} /* namespace terminal */

#endif /* TERMINAL_TERMINALS_PCSC_H_ */
