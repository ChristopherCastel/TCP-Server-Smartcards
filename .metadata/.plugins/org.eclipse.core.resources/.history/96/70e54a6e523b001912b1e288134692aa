#ifndef TERMINAL_TERMINALS_PCSC_H_
#define TERMINAL_TERMINALS_PCSC_H_

#include "terminal_layer.h"

namespace terminal {

class PCSC : public ITerminalLayer {
public:
	PCSC() {};

	~PCSC() {};

	ResponsePacket init();

	ResponsePacket sendCommand(std::string command);

	ResponsePacket diag();

	ResponsePacket disconnect();
};

} /* namespace terminal */

#endif /* TERMINAL_TERMINALS_PCSC_H_ */
