#ifndef SRC_LOGGER_LOGGER_H_
#define SRC_LOGGER_LOGGER_H_

#include <string>
#include "plog/include/plog/Log.h"
#include "plog/include/plog/Appenders/ColorConsoleAppender.h"

namespace logger {

// singleton
class Logger {
public:
	Logger() {}
	virtual ~Logger() {}
	void init(std::string log_path, std::string log_level);
	virtual void log(std::string message);
protected:
	Logger* next;
};

} /* namespace logger */

#endif /* SRC_LOGGER_LOGGER_H_ */
