#include <map>

#include "flyweight_requests.h"
#include "request.h"

namespace client {

void FlyweightRequests::addRequest(std::string key, IRequest* factory) {
	requests.insert(std::make_pair(key, factory));
}

IRequest* FlyweightRequests::getRequest(std::string key) {
	return requests.at(key);
}

} /* namespace client */
