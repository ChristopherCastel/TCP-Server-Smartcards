#ifndef TERMINAL_IFACTORY_H_
#define TERMINAL_IFACTORY_H_

#include "terminal_layer.h"

namespace terminal {

class ITerminalFactory {
public:
	ITerminalFactory();
	virtual ~ITerminalFactory();
	virtual TerminalLayer* create();
};

class PCSCFactory : public ITerminalFactory {
	PCSCFactory();
	~PCSCFactory();
	PCSC* create();
};

} /* namespace terminal */

#endif /* TERMINAL_IFACTORY_H_ */
