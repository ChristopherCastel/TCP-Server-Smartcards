#ifndef TERMINAL_FLYWEIGHT_FACTORY_H_
#define TERMINAL_FLYWEIGHT_FACTORY_H_

#include <map>

#include "factories/factory.h"
#include "factories/factory_pcsc.h"

namespace client {

class FlyweightFactory {
private:
	std::map<std::string, ITerminalLayer*> factories;
public:
	FlyweightFactory();

	virtual ~FlyweightFactory();

	void addFactory(ITerminalLayer* factory);

	ITerminalLayer* getFactory(std::string factory);
};

} /* namespace terminal */

#endif /* TERMINAL_FLYWEIGHT_FACTORY_H_ */
