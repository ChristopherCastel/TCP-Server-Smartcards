#ifndef SRC_CLIENT_REQUESTS_FLYWEIGHT_REQUESTS_H_
#define SRC_CLIENT_REQUESTS_FLYWEIGHT_REQUESTS_H_

#include <map>

#include "request.h"

namespace client {

class FlyweightTerminalFactory {
private:
	std::map<std::string, IRequest*> requests;
public:
	FlyweightTerminalFactory() {};

	virtual ~FlyweightTerminalFactory() {};

	void addFactory(std::string key, ITerminalFactory* factory);

	ITerminalFactory* getFactory(std::string key);
};

} /* namespace client */

#endif /* SRC_CLIENT_REQUESTS_FLYWEIGHT_REQUESTS_H_ */
