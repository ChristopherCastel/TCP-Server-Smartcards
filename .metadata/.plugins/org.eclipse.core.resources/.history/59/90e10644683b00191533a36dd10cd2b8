#ifndef SRC_CONFIG_WRAPPER_H_
#define SRC_CONFIG_WRAPPER_H_

namespace client {

class ConfigWrapper { // https://stackoverflow.com/questions/1008019/c-singleton-design-pattern
public:
	static ConfigWrapper& getInstance() {
		static ConfigWrapper instance;
		return instance;
	}
private:
	ConfigWrapper() {}

	ConfigWrapper(ConfigWrapper const&);

	void operator=(ConfigWrapper const&);
public:
	ConfigWrapper(ConfigWrapper const&) = delete;

	void operator=(ConfigWrapper const&) = delete;
};

} /* namespace client */

#endif /* SRC_CONFIG_WRAPPER_H_ */

