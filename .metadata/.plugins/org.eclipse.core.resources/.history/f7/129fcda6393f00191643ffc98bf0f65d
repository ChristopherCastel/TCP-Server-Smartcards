#ifndef SRC_LOGGER_LOGGER_DEBUG_H_
#define SRC_LOGGER_LOGGER_DEBUG_H_

#include "logger.h"
#include "logger_info.h"

namespace logger {

class LoggerDebug : public Logger {
public:
	LoggerDebug() { this->next = nullptr; }
	LoggerDebug(Logger* next) { this->next = next; }
	virtual ~LoggerDebug() {};
	void log(std::string message);
};

} /* namespace logger */

#endif /* SRC_LOGGER_LOGGER_DEBUG_H_ */
