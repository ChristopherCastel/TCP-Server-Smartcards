#ifndef CLIENT_ENGINE_H_
#define CLIENT_ENGINE_H_

#include <atomic>
#include <thread>
#include <ws2tcpip.h>

#include "../constants/response_packet.h"
#include "../terminal/flyweight_factory.h"
#include "../terminal/terminals/terminal_pcsc.h"

namespace client {

class ClientEngine {
private:
	std::string ip;
	std::string port;
	std::string name;
	std::thread requests_thread;
	std::atomic<bool> stop_flag { false };
	TerminalPCSC terminal;
public:
	ClientEngine();

	virtual ~ClientEngine();

	ResponsePacket mock();

	ResponsePacket connectClient();

	ResponsePacket handleRequest(SOCKET socket, std::string request);

	ResponsePacket initClient(std::string path, FlyweightFactory cache);

	ResponsePacket waitingRequests(SOCKET socket);
};

} /* namespace client */

#endif /* CLIENT_ENGINE_H_ */
