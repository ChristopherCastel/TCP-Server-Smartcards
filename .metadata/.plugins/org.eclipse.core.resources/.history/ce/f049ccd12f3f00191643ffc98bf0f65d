#ifndef SRC_LOGGER_LOGGER_WRAPPER_H_
#define SRC_LOGGER_LOGGER_WRAPPER_H_

#include <string>
#include "logger.h"

namespace logger {

static Logger logger;

inline void init(std::string log_path, std::string log_level) {
	logger.init(log_path, log_level);
}

inline void log(std::string message) {
	std::cout << "log log" << std::endl;
	logger.log(message);
}

} /* namespace logger */

#endif /* SRC_LOGGER_LOGGER_WRAPPER_H_ */
