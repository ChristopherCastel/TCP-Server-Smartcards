#ifndef TERMINAL_LAYER_H_
#define TERMINAL_LAYER_H_

#include "../../response_packet.h"

namespace client {

class ITerminalLayer {
public:
	ITerminalLayer() {};

	virtual ~ITerminalLayer() {};

	virtual responses::ResponsePacket init() = 0;

	virtual responses::ResponsePacket sendCommand(std::string command) = 0;

	virtual responses::ResponsePacket diag() = 0;

	virtual responses::ResponsePacket disconnect() = 0;

	//inline ResponsePacket mock() { ResponsePacket response; return response; }
};

} /* namespace terminal */

#endif /* TERMINAL_LAYER_H_ */
