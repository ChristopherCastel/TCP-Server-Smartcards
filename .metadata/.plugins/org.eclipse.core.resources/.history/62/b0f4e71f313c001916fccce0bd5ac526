#ifndef SRC_REQUEST_CODE_H_
#define SRC_REQUEST_CODE_H_

#include <string>

namespace client {

enum RequestCode {
	CONNECT = 0, DIAG, DISCONNECT, ECHO, INIT_CLIENT, RESTART_TARGET, SEND_COMMAND
};

inline const std::string requestCodeToString(RequestCode r) {
	switch (r) {
	case CONNECT:
		return "REQ_CONNECT";
	case DIAG:
		return "REQ_DIAG";
	case DISCONNECT:
		return "REQ_DISCONNECT";
	case ECHO:
		return "REQ_ECHO";
	case INIT_CLIENT:
		return "REQ_INIT";
	case RESTART_TARGET:
		return "REQ_RESTART";
	case SEND_COMMAND:
		return "REQ_COMMAND";
	default:
		return "[Unknown Request Code]";
	}
}

} /* namespace client */

#endif /* SRC_REQUEST_CODE_H_ */
